setenv EDITOR "micro"
setenv VISUAL "nvim"
setenv BROWSER "open"

setenv TERM "xterm-256color"

setenv LANG "en_US.UTF-8"
setenv LC_CTYPE "en_US.UTF-8"
setenv LC_ALL "en_US.UTF-8"

setenv PATH "$HOME/bin:$PATH"
setenv PATH "$HOME/.local/bin:$PATH"
setenv PATH "$HOME/bin:$PATH"

# Go workspace
setenv GOPATH "$HOME/.go"

setenv FZF_DEFAULT_OPTS "--height 40% --layout reverse --border --inline-info"
setenv FZF_DEFAULT_COMMAND "rg --files --hidden --follow --glob '!.git/*'"
setenv FZF_CTRL_T_COMMAND "$FZF_DEFAULT_COMMAND"
setenv FZF_ALT_C_COMMAND "fd --type d --hidden --follow --exclude '.git'"

setenv GIT_MERGE_AUTOEDIT "no"
setenv GIT_PAGER "delta --dark"

setenv XDG_CACHE_HOME "$HOME/.cache"
setenv XDG_CONFIG_HOME "$HOME/.config"
setenv XDG_DATA_HOME "$HOME/.local/share"
setenv XDG_STATE_HOME "$HOME/.local/state"

setenv BAT_CONFIG_PATH "$HOME/.config/bat/config"
setenv BAT_THEME "GitHub"

# TOKENS
setenv OPENROUTER_API_KEY "{{ .OPENROUTER_API_KEY }}"
setenv ZAI_API_KEY "{{ .ZAI_API_KEY }}"
setenv GITHUB_TOKEN "{{ .GITHUB_TOKEN }}"
setenv ANTHROPIC_AUTH_TOKEN "$ZAI_API_KEY"