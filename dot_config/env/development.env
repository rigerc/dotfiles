# Development environment variables managed by chezmoi
# Place at ~/.local/share/chezmoi/dot_config/env/development.env
# Source this file in your shell with: source ~/.config/env/development.env

# Basic environment variables
export EDITOR="nvim"
export VISUAL="nvim"
export BROWSER="open"
export TERM="xterm-256color"
export LANG="en_US.UTF-8"
export LC_ALL="en_US.UTF-8"

# Path modifications
export PATH="/opt/homebrew/bin:/usr/local/bin:$PATH"
export PATH="$HOME/.local/bin:$PATH"

# Node.js development
export NPM_CONFIG_PREFIX="$HOME/.npm-global"
export PATH="$HOME/.npm-global/bin:$PATH"
export NODE_OPTIONS="--max-old-space-size=4096"

# Python development
export PYTHONPATH="$HOME/.local/lib/python3.x/site-packages:$PYTHONPATH"
export PYTHONSTARTUP="$HOME/.pythonrc"
export PIP_CONFIG_FILE="$HOME/.config/pip/pip.conf"
export PIPENV_VENV_IN_PROJECT=true
export VIRTUAL_ENV_DISABLE_PROMPT=1

# Go development
export GOPATH="$HOME/go"
export GOROOT="/opt/homebrew/opt/go/libexec"
export PATH="$GOPATH/bin:$GOROOT/bin:$PATH"
export GO111MODULE=on

# Rust development
export CARGO_HOME="$HOME/.cargo"
export RUSTUP_HOME="$HOME/.rustup"
export PATH="$CARGO_HOME/bin:$PATH"
export RUST_SRC_PATH="$(rustc --print sysroot)/lib/rustlib/src/rust/library"

# Java development (if installed)
export JAVA_HOME="/opt/homebrew/opt/openjdk"
export PATH="$JAVA_HOME/bin:$PATH"
export CLASSPATH="."

# Maven/Gradle
export M2_HOME="$HOME/.m2"
export GRADLE_HOME="$HOME/.gradle"
export PATH="$M2_HOME/bin:$GRADLE_HOME/bin:$PATH"

# Ruby development (if installed)
export GEM_HOME="$HOME/.gem"
export PATH="$GEM_HOME/bin:$PATH"

# Development tools
export FZF_DEFAULT_OPTS="--height 40% --layout=reverse --border --inline-info"
export FZF_DEFAULT_COMMAND="rg --files --hidden --follow --glob '!.git/*'"
export FZF_CTRL_T_COMMAND="$FZF_DEFAULT_COMMAND"
export FZF_ALT_C_COMMAND="fd --type d --hidden --follow --exclude '.git'"

# Git configuration
export GIT_MERGE_AUTOEDIT=no
export GIT_PAGER="delta --dark"

# Database development
export PGDATA="$HOME/.local/var/postgres"
export MYSQL_HOME="/opt/homebrew/opt/mysql-client"

# Docker development
export DOCKER_BUILDKIT=1
export COMPOSE_DOCKER_CLI_BUILD=1

# Kubernetes development
export KUBECONFIG="$HOME/.kube/config"
export KUBECTL_EXTERNAL_DIFF="delta"

# Terraform development
export TF_VAR_file="terraform.tfvars"
export TF_IN_AUTOMATION=true

# AWS CLI (if used)
export AWS_CONFIG_FILE="$HOME/.aws/config"
export AWS_SHARED_CREDENTIALS_FILE="$HOME/.aws/credentials"

# Development cache directories
export XDG_CACHE_HOME="$HOME/.cache"
export XDG_CONFIG_HOME="$HOME/.config"
export XDG_DATA_HOME="$HOME/.local/share"
export XDG_STATE_HOME="$HOME/.local/state"

# Shell history
export HISTFILE="$HOME/.zsh_history"
export HISTSIZE=50000
export SAVEHIST=50000

# Development tools configuration
export RIPGREP_CONFIG_PATH="$HOME/.config/ripgrep/config"
export BAT_CONFIG_PATH="$HOME/.config/bat/config"
export BAT_THEME="GitHub"

# Local development servers
export DEV_PORT=3000
export API_PORT=8000

# Timezone (set to local timezone)
export TZ="America/New_York"

# Development logging
export LOG_LEVEL="info"
export DEBUG=false

# Security
export GPG_TTY=$(tty)

# Performance
export MAKEFLAGS="-j$(nproc)"
export CMAKE_BUILD_TYPE="Release"

# Custom application environments
export NODE_ENV="development"
export RAILS_ENV="development"
export FLASK_ENV="development"
export DJANGO_SETTINGS_MODULE="myproject.settings.development"

# Temporary directories for development
export TMPDIR="$HOME/.tmp"
export mkdir -p "$TMPDIR" 2>/dev/null || true