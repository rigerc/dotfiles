## Catppuccin Mocha theme for GNU nano
## https://github.com/catppuccin/nano

## === SENSIBLE DEFAULTS ===

# Use auto-indentation
set autoindent

# Cut from the current cursor position to the end of the line
set cutfromcursor

# Enable mouse support
set mouse

# Display line numbers
set linenumbers

# Smooth scrolling (line by line instead of page by page)
set smooth

# Create backup files before editing
set backup
set backupdir ~/.nano/backups

# Undo/Redo support
set undo
set undolevels 200

# Enable spell checking
set speller "aspell -x -c"

# Allow nano to use as pager
set pager

# Restrict allowed directories
set operating_dir ~

# Auto-save files when typing (can be changed to manual save)
# set autosave

# Word wrapping at 80 characters (comment out if you prefer no wrap)
# set fill 80

# Display a helpful indicator of where you are in the file
set indicator

# Quick blank line margin
set guidestripe 80

# Jump to the last line of the file by default
# set poslog

# Remember cursor position in files
set positionlog

# Use tab characters instead of spaces
# set tabstospaces
set tabsize 4

# Convert typed tabs to spaces
set tabstospaces

# Display all whitespace characters
# set whitespace

# No more annoying bells
set quiet

# Searchs are case-insensitive by default
set ignoreca

## === CATPPUCCIN MOCHA COLORS ===

# Color palette reference:
# Rosewater: #f5e0dc
# Flamingo: #f2cdcd
# Pink: #f5c2e7
# Mauve: #cba6f7
# Red: #f38ba8
# Maroon: #eba0ac
# Peach: #fab387
# Yellow: #f9e2af
# Green: #a6e3a1
# Teal: #94e2d5
# Sky: #89dceb
# Sapphire: #74c7ec
# Blue: #89b4fa
# Lavender: #b4befe

# UI Elements
set titlecolor bold white,blue
set statuscolor bold white,blue
set errorcolor bold white,red
set selectedcolor bold white,blue
set numbercolor cyan
set keycolor blue
set functioncolor green

# Strings and characters
set color green "\"[^\"]*\""
set color green "'[^']*'"

# Comments
set color cyan "^[[:space:]]*#.*"
set color cyan "//.*"

## === SYNTAX HIGHLIGHTING FOR COMMON FILETYPES ===

## Python
extendsyntax python
set color mauve "\<(def|class|import|from|return|if|else|elif|for|while|try|except|finally|with|as|pass|break|continue|and|or|not|in|is|None|True|False|self)\>"
set color green "\"\"\".*\"\"\""
set color green "f\"[^\"]*\""
set color cyan "#.*"
set color yellow "[0-9]+(\.[0-9]+)?"

## C/C++
extendsyntax c
set color mauve "\<(void|int|char|float|double|bool|struct|union|enum|typedef|static|const|volatile|restrict|if|else|for|while|do|switch|case|default|return|break|continue|goto|auto|register|extern|inline)\>"
set color green "\"[^\"]*\""
set color yellow "[0-9]+"
set color cyan "//.*"
set color cyan "/\*.*\*/"

## Shell script
extendsyntax sh
set color mauve "\<(if|then|else|elif|fi|for|while|do|done|case|esac|function|export|local|readonly|declare|in|select)\>"
set color green "\"[^\"]*\""
set color green "'[^']*'"
set color yellow "[0-9]+"
set color cyan "#.*"
set color peach "\$\{[^}]*\}"
set color peach "\$[a-zA-Z_][a-zA-Z0-9_]*"

## HTML/XML
extendsyntax html
set color mauve "<[^>]*>"
set color green "\"[^\"]*\""
set color yellow "[0-9]+"
set color cyan "<!--.*-->"

## JSON
extendsyntax json
set color mauve "\<(true|false|null)\>"
set color green "\"[^\"]*\""
set color yellow "[0-9]+(\.[0-9]+)?([eE][+-]?[0-9]+)?"
set color blue ":"
set color cyan ","

## JavaScript/TypeScript
extendsyntax javascript
set color mauve "\<(function|const|let|var|return|if|else|for|while|do|switch|case|break|continue|try|catch|finally|async|await|class|extends|import|export|default|from|as|new|this|super|static)\>"
set color green "\"[^\"]*\""
set color green "'[^']*'"
set color green "`[^`]*`"
set color yellow "[0-9]+"
set color cyan "//.*"
set color cyan "/\*.*\*/"

## Markdown
extendsyntax markdown
set color green "^#{1,6} "
set color green "\*\*[^*]*\*\*"
set color green "__[^_]*__"
set color green "\*[^*]*\*"
set color green "_[^_]*_"
set color cyan "^```"
set color cyan "```$"
set color yellow "^\* "
set color yellow "^- "
set color yellow "^[0-9]+\. "