## .nanorc - nano configuration

# Enable mouse support
set mouse

# Use auto-indentation
set autoindent

# Enable soft line wrapping
set softwrap

# Display line numbers
set linenumbers

# Use smooth scrolling
set smooth

# Show a feedback bar at the bottom
set constantshow

# Use bold instead of reverse video for the title bar
set titlecolor bold,white,blue
set statuscolor bold,white,green
set errorcolor bold,white,red
set selectedcolor bold,white,magenta
set stripecolor ,yellow
set numbercolor cyan
set keycolor cyan
set functioncolor green

# Syntax highlighting
include "/usr/share/nano/*.nanorc"

# Allow suspending with ^Z
set suspend

# Make the Home key smarter
set smarthome

# Use tab to complete filenames
set tabstospaces
set tabsize 4

# Backup files
# set backup
# set backupdir "~/.nano/backups"

# Enable multi-file buffer
set multibuffer

# Convert tabs to spaces
set tabstospaces

# Make searches case-insensitive by default
# set casesensitive

# Remember cursor position
set positionlog

# Enable quick blank line skipping
set jumpyscrolling

# Syntax highlighting for common files
include "/opt/homebrew/share/nano/*.nanorc" 2>/dev/null

# Key bindings
bind ^S savefile main
bind ^Q exit all
bind ^F whereis all
bind ^N findnext all
bind ^P findprevious all