alias ls='eza --all --long --group --group-directories-first --icons --header --time-style long-iso'
alias tree='eza --tree'
alias cat='bat'
alias grep='rg'
alias please="sudo !!"
alias pacman="sudo pacman --noconfirm"
alias config="cd ~/.config"
alias dotfiles="chezmoi cd"
alias chezmoi-update="chezmoi update && exec fish"
alias lg="lazygit"

function gobuild
    mkdir -p "$HOME/.local/bin"
    set appname (go list -f '{{.Name}}' 2>/dev/null)
    if test -z "$appname"
        echo "Error: could not determine app name from go list"
        return 1
    end
    set outfile "$HOME/.local/bin/$appname"
    go build -o "$outfile"
    if test $status -eq 0
        echo "✅ Built $appname → $outfile"
    else
        echo "❌ Build failed"
    end
end