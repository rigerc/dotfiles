# Example configuration file using user data
# This file demonstrates how to use the interactive prompt data

# Git configuration using prompted data
[user]
    name = {{ .data.github_user | quote }}
    email = {{ .data.github_email | quote }}

[github]
    user = {{ .data.github_user | quote }}

[core]
    editor = nano
    autocrlf = input

[init]
    defaultBranch = main

# Personal information
[personal]
    username = {{ .data.username | quote }}
    github = {{ .data.github_user | quote }}
    email = {{ .data.github_email | quote }}

[include]
    path = ~/.config/git/alias